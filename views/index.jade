      span.caption Facebook






block bloc_chatroom
  div#onChat
    div#main.chatroom
      div#wrap_messages
        div#messages
          h2.clearfix.nb-connected
          div#message-box
            div(id="{{id}}")
              a
                img(src="{{user.avatar}}").avatar
              .message
                .pseudo {{user.username}}
                p(style="font-size:small;") {{{message}}}
  div.write
      form#message-form(style="display:none;")    
        input(type="text-area", placeholder='Poster un message')#message-to-send
        input(type="submit", value='Envoyer')#send-message




block user_box
  div#user_box(style="display: none;")
    li(id="{{id}}")
      a
        img(src="{{avatar}}")
      div
        p {{username}}





block bloc_liste_poditeurs
  .online
    h2.nb-connected
    ul#members-list
      block user_box




